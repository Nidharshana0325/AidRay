<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light gray background when focused -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#B0B0B0"/> <!-- Gray border -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5"/> <!-- Lighter gray background when not focused -->
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:color="#81711414"/> <!-- Gray border -->
        </shape>
    </item>
</selector>
